<%= form_with(model: comment, local: true) do |form| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
        <% comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%if user_signed_in?%>
    <div class="field">
      <%= form.text_field :body, placeholder: 'Write a new comment here...', required: true, class: 'comments--input' %>
    </div>
    <%= form.hidden_field :meme_id, value: meme_id %>
    <div class="actions">
      <%= submit_tag 'Comment!', class: 'meme-buttons' %>
    </div>
  <%else %>
    <%= link_to "Login to vote!", new_user_session_path, class: 'pink-text text-big'  %>
  <% end %>
<% end %>
